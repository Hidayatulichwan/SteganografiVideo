<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#258e8e"
    tools:context="com.example.ichwan.steganigrafivideo.EncodeActivity">


    <Button
        android:id="@+id/btnvideo"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:text="Record A VIDEO"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/isiKey"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="220dp"
        android:layout_toEndOf="@+id/btnTakeVid"
        android:layout_toRightOf="@+id/btnTakeVid"
        android:maxLength="8"
        android:minLines="8"
        android:hint="Isi Key"
        android:background="#ffffff"
        android:gravity="top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="Key :"
        android:textColor="#ffffff"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/Preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnvideo"
        android:layout_centerHorizontal="true"
        android:text="Preview"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <!-- To preview video recorded -->
    <VideoView
        android:id="@+id/videoPreview"
        android:layout_width="380dp"
        android:layout_height="390dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="70dp" />




    <EditText
        android:id="@+id/Tekspesan"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:layout_below="@+id/videoPreview"
        android:layout_margin="2dp"
        android:background="#ffffff"
        android:hint="Masukan Pesan"
        android:gravity="top" />


    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Embed"
        android:textSize="12dp"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="270dp"
        />



    <Button
        android:id="@+id/btnBatal"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Clear"
        android:textSize="12dp"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="270dp"
        />


</RelativeLayout>
