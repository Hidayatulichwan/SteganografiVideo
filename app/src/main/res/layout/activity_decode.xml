<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#258e8e"
    tools:context="com.example.ichwan.steganigrafivideo.DecodeActivity">

    <Button

        android:id="@+id/btnTakeVid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Take video"
        android:textSize="10dp" />

    <VideoView
        android:id="@+id/videoPreview2"
        android:layout_below="@id/btnTakeVid"
        android:layout_width="380dp"
        android:layout_height="350dp"

       />

    <TextView
        android:id="@+id/info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/divider"
        android:layout_below="@+id/videoPreview2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/info">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/outputTeks"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:background="#ffffff"
            android:hint="Isi pesan"
            android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </ScrollView>





</RelativeLayout>


